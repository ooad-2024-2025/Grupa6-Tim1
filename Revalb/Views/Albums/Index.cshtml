@model IEnumerable<Revalb.Models.Album>

@{
    ViewData["Title"] = "Index";
}

@section Styles {
    <link rel="stylesheet" href="~/css/albumi/Albumi.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
}

<div class="container">
    <div class="header">Select an album to view, edit or delete</div>

    <div class="grid" id="albumGrid">
        @foreach (var item in Model)
        {
            <div class="album-card" data-id="@item.IdAlbum">
                <div class="album-cover"></div>
                <div class="album-name">@item.Naziv</div>
                <div class="artist-name">@item.ArtistIme</div>
                <div class="action-buttons">
                    <a asp-action="Edit" asp-route-id="@item.IdAlbum">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.IdAlbum">Delete</a>
                </div>
            </div>
        }
    </div>
</div>

<div class="create-button">
    <a asp-action="Create">Create New Album</a>
</div>

@section Scripts {
    <script>
        const cards = document.querySelectorAll('.album-card');
        cards.forEach(card => {
            card.addEventListener('click', () => {
                cards.forEach(c => c.classList.remove('selected'));
                card.classList.add('selected');
            });
        });
    </script>
}
