@model IEnumerable<Revalb.Models.Album>
@inject Microsoft.AspNetCore.Identity.UserManager<Revalb.Models.Korisnik> UserManager
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Your Albums / Manage Albums";
    var isAdmin = HttpContextAccessor.HttpContext.User.IsInRole("Administrator");
}

<div class="container mt-5">
    @if (isAdmin)
    {
        <h1 class="mb-4">Manage Albums</h1>
        <p>
            <a asp-action="Create" class="btn btn-success mb-3">➕ Add New Album</a>
        </p>

        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Cover</th>
                    <th>Name</th>
                    <th>Release Date</th>
                    <th>Artist</th>
                    <th>Average Rating</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var album in Model)
                {
                    <tr>
                        <td>
                            <img src="@album.CoverSlika" alt="Cover" style="width: 60px; height: 60px; object-fit: cover;" />
                        </td>
                        <td>@album.Naziv</td>
                        <td>@album.DatumObjave.ToString("yyyy")</td>
                        <td>@album.ArtistIme</td>
                        <td>@album.ProsjecnaOcjena.ToString("0.00")</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@album.IdAlbum" class="btn btn-sm btn-primary">Edit</a>
                            <a asp-action="Details" asp-route-id="@album.IdAlbum" class="btn btn-sm btn-info">Details</a>
                            <a asp-action="Delete" asp-route-id="@album.IdAlbum" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <a asp-area="Identity" asp-page="/Account/ArtistProfile" class="text-white text-decoration-none mb-4 d-inline-block">
            &larr; Back to Profile
        </a>

        <div class="card p-4 mb-5" style="border-radius: 20px;">
            <h3 class="mb-4 text-center">Your Albums</h3>
            <div class="d-flex flex-wrap gap-4 justify-content-center">
                @foreach (var album in Model)
                {
                    <div class="album-card text-white p-2" style="width: 150px; background-color: #1f1f1f; border-radius: 15px; text-align: center;">
                        <img src="@album.CoverSlika" alt="@album.Naziv" class="img-fluid rounded" style="width: 100%; height: 150px; object-fit: cover;" />
                        <div class="mt-2">
                            <div class="fw-bold">@album.Naziv</div>
                            <div class="small">@album.DatumObjave.ToString("yyyy") · Album</div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="card p-4" style="border-radius: 20px;">
            <a asp-action="Create" class="text-decoration-none d-flex justify-content-between align-items-center">
                <h4 class="mb-0">➕ Add Album</h4>
                <span style="font-size: 24px;">&rarr;</span>
            </a>
        </div>
    }
</div>
