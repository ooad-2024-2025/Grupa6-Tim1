@model Revalb.Models.Album

@{
    ViewData["Title"] = "Album Details";
}

<div class="container mt-5">
    <a asp-action="Index" class="text-white text-decoration-none mb-4 d-inline-block">
        &larr; go back
    </a>

    <div class="card p-4" style="border-radius: 20px; display: flex; align-items: center; background-color: white;">
        <div style="flex: 1; text-align: center;">
            <img src="@Model.CoverSlika" alt="@Model.Naziv" class="img-fluid rounded" style="max-width: 250px; height: auto;" />
        </div>
        <div style="flex: 2; padding-left: 30px;">
            <h2 class="fw-bold">@Model.Naziv @Model.DatumObjave.ToString("yyyy")</h2>

            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model.IdAlbum" class="btn btn-outline-dark me-3">
                    <i class="bi bi-pencil-square"></i> Edit
                </a>

                <a asp-action="Delete" asp-route-id="@Model.IdAlbum" class="btn btn-outline-danger">
                    <i class="bi bi-x-circle"></i> Delete
                </a>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-end mt-4">
        <a href="#" class="text-white text-decoration-none fw-bold" style="font-size: 1.2rem;">
            Analytics →
        </a>
    </div>
</div>

@section Styles {
    <style>
        body {
            background-color: #032830;
        }

        .btn {
            font-size: 1.2rem;
        }

        .btn-outline-dark {
            color: #1f1f1f;
            border-color: #1f1f1f;
        }

        .btn-outline-dark:hover {
            background-color: #1f1f1f;
            color: white;
        }

        .btn-outline-danger {
            color: #e3342f;
            border-color: #e3342f;
        }

        .btn-outline-danger:hover {
            background-color: #e3342f;
            color: white;
        }
    </style>
}