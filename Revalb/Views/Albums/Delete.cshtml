@model Revalb.Models.Album

@{
    ViewData["Title"] = "Delete Album";
}

@section Styles {
    <link rel="stylesheet" href="~/css/albumi/Albumi.css" />
}

<div class="AlbumForm">
    <div class="header text-danger">Delete Album</div>

    <div class="text-white text-center mb-4">
        <p>Are you sure you want to delete <strong>@Model.Naziv</strong>?</p>
        <img src="@Model.CoverSlika" alt="@Model.Naziv" class="img-fluid rounded mb-4" style="max-width: 250px;" />
        <p><em>Published: @Model.DatumObjave.ToString("dd.MM.yyyy")</em></p>
        <p><em>@Model.ArtistIme</em></p>
    </div>

    <form asp-action="Delete" method="post" class="form">
        <input type="hidden" asp-for="IdAlbum" />
        
        <div class="form-actions">
            <input type="submit" value="Delete" class="form-button" style="background-color: #e3342f;" />
            <a asp-action="Index" class="form-button secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}