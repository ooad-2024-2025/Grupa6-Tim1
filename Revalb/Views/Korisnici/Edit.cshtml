@model Revalb.Models.Korisnik

@{
    ViewData["Title"] = "Edit Profile";
}

<div class="container mt-5">
    <h1 class="text-white mb-4">Edit Profile</h1>

    <div class="card p-4" style="border-radius: 20px; background-color: white;">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group mb-3">
                <label asp-for="Ime" class="form-label fw-bold"></label>
                <input asp-for="Ime" class="form-control" />
                <span asp-validation-for="Ime" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Prezime" class="form-label fw-bold"></label>
                <input asp-for="Prezime" class="form-control" />
                <span asp-validation-for="Prezime" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Nadimak" class="form-label fw-bold"></label>
                <input asp-for="Nadimak" class="form-control" />
                <span asp-validation-for="Nadimak" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Slika" class="form-label fw-bold">Profile Picture URL</label>
                <input asp-for="Slika" class="form-control" />
                <span asp-validation-for="Slika" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-end mt-4">
                <button type="submit" class="btn btn-dark">Save Changes</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@section Styles {
    <style>
    body {
        background-color: #032830;
    }
    .card {
        box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    }
    .btn-dark {
        font-weight: bold;
        border-width: 2px;
    }
</style>
}