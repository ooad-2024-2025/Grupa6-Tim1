@model Revalb.Models.Korisnik

@{
    ViewData["Title"] = "My Profile";
}

<div class="container mt-5">
    <h1 class="text-white mb-4">My Profile</h1>

    <div class="card p-4" style="border-radius: 20px; background-color: white;">
        <div class="text-center mb-4">
            <img src="@Model.Slika" alt="Profile Picture" class="img-fluid rounded-circle" style="width: 150px; height: 150px; object-fit: cover; border: 3px solid #000;" />
        </div>

        <dl class="row">
            <dt class="col-sm-4">First Name</dt>
            <dd class="col-sm-8">@Model.Ime</dd>

            <dt class="col-sm-4">Last Name</dt>
            <dd class="col-sm-8">@Model.Prezime</dd>

            <dt class="col-sm-4">Nickname</dt>
            <dd class="col-sm-8">@Model.Nadimak</dd>

            <dt class="col-sm-4">Email</dt>
            <dd class="col-sm-8">@Model.Email</dd>
        </dl>

        <div class="d-flex justify-content-end mt-4">
            <a asp-action="Edit" class="btn btn-outline-dark">Edit Profile</a>
        </div>
    </div>
</div>

@section Styles {
    <style>
    body {
        background-color: #032830;
    }
    .card {
        box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    }
    .btn-outline-dark {
        font-weight: bold;
        border-width: 2px;
    }
</style>
}