@page
@model Revalb.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Log in";
}

<div class="login-background d-flex align-items-center justify-content-center">
    <div class="login-card shadow p-5 rounded">
        <h2 class="text-center mb-2">Log in</h2>
        <p class="text-center mb-4">to continue</p>

        <form method="post">
            <div class="form-group mb-3">
                <input asp-for="Input.Email" class="form-control login-input" placeholder="Username or e-mail" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <input asp-for="Input.Password" class="form-control login-input" placeholder="Password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="d-grid">
                <button type="submit" class="btn login-btn">Log in</button>
            </div>
        </form>

        <div class="text-center mt-4">
            <small>Don't have an account? <a asp-page="./Register">Sign up</a></small>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}