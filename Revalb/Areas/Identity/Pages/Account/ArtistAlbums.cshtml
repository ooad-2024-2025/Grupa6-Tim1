@page
@model Revalb.Areas.Identity.Pages.Account.ArtistAlbumsModel
@{
    ViewData["Title"] = "Your Albums";
}

<div class="container mt-5">
    <a asp-area="Identity" asp-page="/Account/ArtistProfile" class="text-white text-decoration-none mb-4 d-inline-block">
        &larr; go back
    </a>

    <div class="card p-4 mb-5" style="border-radius: 20px;">
        <h3 class="mb-4 text-center">Your Albums</h3>
        <div class="d-flex flex-wrap gap-4 justify-content-center">
            @foreach (var album in Model.Albums)
            {
                <div class="album-card text-white p-2" style="width: 150px; background-color: #1f1f1f; border-radius: 15px; text-align: center;">
                    <img src="@album.CoverSlika" alt="@album.Naziv" class="img-fluid rounded" style="width: 100%; height: 150px; object-fit: cover;" />
                    <div class="mt-2">
                        <div class="fw-bold">@album.Naziv</div>
                        <div class="small">@album.DatumObjave.ToString("yyyy") · Album</div>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="card p-4" style="border-radius: 20px;">
        <a asp-controller="Albums" asp-action="Create" class="mb-3 d-inline-block fw-bold">
            ➕ Add Album
        </a>

    </div>
</div>