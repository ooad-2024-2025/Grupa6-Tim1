@model IEnumerable<REVALB.Models.User>

<h2>Registered Users</h2>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Created At</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.CreatedAt.ToString("dd.MM.yyyy")</td>
            </tr>
        <td>
            <form asp-action="DeleteUser" asp-controller="Admin" method="post" onsubmit="return confirm('Are you sure you want to delete this user?');">
                <input type="hidden" name="id" value="@user.Id" />
                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
            </form>
        </td>
        <td>
            <a asp-action="EditRole" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Edit Role</a>
            <a asp-controller="Profile" asp-action="User" asp-route-id="@user.Id" class="btn btn-sm btn-info">View</a>
        </td>

        }
    </tbody>
</table>
