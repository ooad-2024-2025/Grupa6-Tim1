@model IEnumerable<REVALB.Models.Album>

<div class="container mt-5">

    <h2 class="mb-4">❤️ My Favorite Albums</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            You haven't added any favorite albums yet.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var album in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <img src="@album.CoverImageURL" class="card-img-top" style="max-height: 200px; object-fit: cover;" />
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@album.Title</h5>
                            <p class="card-text text-muted">@album.Description?.Substring(0, Math.Min(100, album.Description.Length))...</p>
                            <a asp-controller="Album" asp-action="Details" asp-route-id="@album.Id" class="btn btn-outline-primary mt-auto">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
